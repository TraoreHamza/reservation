{% extends 'base.html.twig' %}

{% block title %}
	Accueil
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4">

	{# Section Hero avec image de fond + texte superposé #}
	<div class="relative rounded-2xl overflow-hidden mt-8 shadow-lg"
		style="background-image: url('{{ asset('medias/images/bg-home.jpg') }}'); background-position: center; background-size: cover;">
		
		<div class="bg-gradient-to-b from-transparent to-slate-900 h-full py-28 px-6 sm:px-10 flex flex-col justify-center items-center text-center">
			<h1 class="text-4xl sm:text-5xl font-bold text-white">Bienvenue sur notre plateforme de réservation de salles</h1>
			<p class="text-xl text-cyan-100 mt-4">Trouvez la salle parfaite pour vos événements, réunions ou séminaires.</p>
		</div>
	</div>
			
		</div>

		<div class="mt-16 container mx-auto">
			<h2 class="text-3xl font-semibold text-center mb-8">Nos salles populaires</h2>
			{% if rooms is defined and rooms|length > 0 %}
				<div class="grid gap-8 grid-cols-1 sm:grid-cols-2 md:grid-cols-3 lg:grid-cols-4">
					{% for room in rooms %}
						<div class="relative min-h-40 bg-white rounded-xl shadow hover:scale-95 transition-all duration-200 flex flex-col overflow-hidden" style="background-image: url('{{ room.imagePath }}'); background-position: center; background-size: cover; background-repeat: no-repeat;">
							<div class="bg-gradient-to-b from-transparent to-slate-900 h-full flex flex-col justify-end">
								<a href="{{ path('room_view', {'id': room.id}) }}" class="text-slate-50 pl-2">{{ room.name }}
									&rarr;</a>
								<p class="text-cyan-100 text-sm pl-2 pb-2">{{ room.location.department }}
									({{ room.location.number }})</p>
							</div>
						</div>
					{% endfor %}
				</div>
			{% else %}
				<p class="text-center text-gray-500">Aucune salle populaire n'est disponible pour le moment.</p>
			{% endif %}
		</div>

		<div class="mt-16 justify-center container mx-auto">
			<h2 class="text-3xl font-semibold text-center mb-8">Explorez nos localisations</h2>
            
			<twig:Map/>
		</div>
	</div>
{% endblock %}
