{% extends 'base.html.twig' %}

{% block title %}Salles de la région {{ region }}{% endblock %}

{% block body %}
    <h1 class="text-2xl font-bold mb-4">Salles de la région {{ region }}</h1>
    {% if rooms is not empty %}
        <ul class="space-y-2">
            {% for room in rooms %}
                <li>
                    <a href="{{ path('room_view', {id: room.id}) }}" class="text-blue-600 hover:underline">
                        {{ room.name }}
                    </a>
                </li>
            {% endfor %}
        </ul>
    {% else %}
        <div class="bg-yellow-100 border-l-4 border-yellow-500 text-yellow-700 p-4 rounded-lg">
            Pas de salle dans cette région.
        </div>
    {% endif %}
{% endblock %}