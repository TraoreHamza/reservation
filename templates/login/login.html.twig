{% extends 'base.html.twig' %}

{% block title %}Connexion
{% endblock %}

{% block body %}
	<div class="min-h-screen flex flex-col items-center justify-center gap-4">

		<p class="">{{ ux_icon('lucide:newspaper', { class: 'text-5xl h-12 w-12' }) }}</p>

		<h2 class="text-center text-4xl flex items-center gap-2 mt-10">
			Ravis de vous revoir
			{{ ux_icon('ant-design:smile-twotone', { class: 'text-5xl h-10 w-10' }) }}
		</h2>
		{% if error %}
			<div class="bg-red-100 text-red-700 px-4 py-2 rounded mb-4">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}
		<form method="post">
			{% if csrf_token('authenticate') %}
				<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
			{% endif %}
			<div class="mb-4">
				<label for="inputEmail" class="block text-gray-700">Email</label>
				<input type="email" id="inputEmail" name="_username" required autofocus class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
			</div>
			<div class="mb-4">
				<label for="inputPassword" class="block text-gray-700">Mot de passe</label>
				<input type="password" id="inputPassword" name="_password" required class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500">
			</div>
			<div class="flex items-center justify-between mb-4">
				<div class="flex items-center">
					<input type="checkbox" id="remember_me" name="_remember_me" class="mr-2">
					<label for="remember_me" class="text-sm text-gray-600">Se souvenir de moi</label>
				</div>
				<a href="{{ path('app_forgot_password_request') }}" class="text-sm text-blue-600 hover:underline">Mot de passe oublié ?</a>
			</div>
			<button type="submit" class="w-full bg-blue-600 text-white py-2 rounded hover:bg-blue-700 transition-colors">Se connecter</button>
		</form>
		<div class="mt-4 text-center">
			<a href="{{ path('app_register') }}" class="text-blue-600 hover:underline">Créer un compte</a>
		</div>
	</div>
{% endblock %}
