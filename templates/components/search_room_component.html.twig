<div{{ attributes }}>
    <div class="search-container">
        <!-- Barre de recherche unique -->
        <form method="GET" action="{{ path('search_room') }}" class="mb-3">
            <div class="input-group">
                <input 
                    type="text" 
                    name="q" 
                    value="{{ query }}" 
                    placeholder="Tapez pour rechercher en temps réel ou appuyez sur Entrée..." 
                    class="form-control" 
                    autocomplete="off"
                    id="unified-search"
                />
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-search"></i> Rechercher
                </button>
            </div>
        </form>
        
        <!-- Résultats dynamiques -->
        <div id="dynamic-results" class="mt-3" style="display: none;">
            <!-- Les résultats dynamiques apparaîtront ici -->
        </div>
        
        <!-- Résultats de la recherche classique -->
        <div class="results-container" id="classic-results">
            {% set rooms = this.getRooms %}
            {% if rooms|length > 0 %}
                <div class="row">
                    {% for room in rooms %}
                        <div class="col-md-6 mb-3">
                            <div class="card h-100">
                                <div class="card-body">
                                    <h5 class="card-title">{{ room.name }}</h5>
                                    <p class="card-text">
                                        <strong>Capacité :</strong> {{ room.capacity }} personnes<br>
                                        {% if room.description %}
                                            <strong>Description :</strong> {{ room.description|slice(0, 100) }}{% if room.description|length > 100 %}...{% endif %}<br>
                                        {% endif %}
                                        <strong>Disponible :</strong> 
                                        {% if room.isAvailable %}
                                            <span class="badge bg-success">Oui</span>
                                        {% else %}
                                            <span class="badge bg-danger">Non</span>
                                        {% endif %}
                                    </p>
                                    <a href="{{ path('room_view', { 'id': room.id }) }}" class="btn btn-primary">Voir la salle</a>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                </div>
            {% else %}
                {% if query %}
                    <div class="alert alert-info">
                        <p class="mb-0">Aucune salle trouvée pour "{{ query }}".</p>
                    </div>
                {% else %}
                    <div class="alert alert-secondary">
                        <p class="mb-0">Commencez à taper pour rechercher une salle...</p>
                    </div>
                {% endif %}
            {% endif %}
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const searchInput = document.getElementById('unified-search');
            const resultsContainer = document.getElementById('dynamic-results');
            const classicResults = document.getElementById('classic-results');
            let searchTimeout;

            searchInput.addEventListener('input', function() {
                const query = this.value.trim();
                
                // Annuler la recherche précédente
                clearTimeout(searchTimeout);
                
                if (query.length < 2) {
                    resultsContainer.style.display = 'none';
                    classicResults.style.display = 'block';
                    return;
                }

                // Masquer les résultats classiques
                classicResults.style.display = 'none';

                // Attendre 300ms après que l'utilisateur arrête de taper
                searchTimeout = setTimeout(() => {
                    fetch(`/api/search-room?q=${encodeURIComponent(query)}`)
                        .then(response => response.json())
                        .then(data => {
                            displayDynamicResults(data, query);
                        })
                        .catch(error => {
                            console.error('Erreur de recherche:', error);
                        });
                }, 300);
            });

            // Gérer la soumission du formulaire
            searchInput.closest('form').addEventListener('submit', function(e) {
                const query = searchInput.value.trim();
                if (query.length < 2) {
                    e.preventDefault();
                    return;
                }
                // Si la requête est valide, laisser le formulaire se soumettre normalement
            });

            function displayDynamicResults(rooms, query) {
                if (rooms.length === 0) {
                    resultsContainer.innerHTML = `
                        <div class="alert alert-info">
                            <p class="mb-0">Aucune salle trouvée pour "${query}".</p>
                        </div>
                    `;
                } else {
                    let html = '<div class="row">';
                    rooms.forEach(room => {
                        html += `
                            <div class="col-md-6 mb-3">
                                <div class="card h-100 border-primary">
                                    <div class="card-body">
                                        <h5 class="card-title">${room.name}</h5>
                                        <p class="card-text">
                                            <strong>Capacité :</strong> ${room.capacity} personnes<br>
                                            ${room.description ? `<strong>Description :</strong> ${room.description.substring(0, 100)}${room.description.length > 100 ? '...' : ''}<br>` : ''}
                                            <strong>Disponible :</strong> 
                                            ${room.isAvailable ? '<span class="badge bg-success">Oui</span>' : '<span class="badge bg-danger">Non</span>'}
                                        </p>
                                        <a href="/${room.id}" class="btn btn-primary">Voir la salle</a>
                                    </div>
                                </div>
                            </div>
                        `;
                    });
                    html += '</div>';
                    resultsContainer.innerHTML = html;
                }
                resultsContainer.style.display = 'block';
            }

            // Masquer les résultats dynamiques quand on clique ailleurs
            document.addEventListener('click', function(e) {
                if (!searchInput.contains(e.target) && !resultsContainer.contains(e.target)) {
                    resultsContainer.style.display = 'none';
                    classicResults.style.display = 'block';
                }
            });

            // Gérer la touche Échap
            searchInput.addEventListener('keydown', function(e) {
                if (e.key === 'Escape') {
                    this.value = '';
                    resultsContainer.style.display = 'none';
                    classicResults.style.display = 'block';
                }
            });
        });
    </script>
</div>
