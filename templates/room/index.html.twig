{% extends 'base.html.twig' %}
{% block body %}
<h1>Liste des salles</h1>

<div class="room-list">
    {% for room in rooms %}
        <div class="room-card">
            <h2>{{ room.name }}</h2>
            <img src="{{ room.image }}" alt="Image de la salle {{ room.name }}" style="max-width:200px;">
            <p><strong>Capacité :</strong> {{ room.capacity }}</p>
            <p><strong>Description :</strong> {{ room.description }}</p>
            <p><strong>Disponible :</strong> {{ room.isAvailable ? 'Oui' : 'Non' }}</p>
        </div>
    {% else %}
        <p>Aucune salle trouvée.</p>
    {% endfor %}
</div>
{% endblock %}