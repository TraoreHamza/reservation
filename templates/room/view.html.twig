{% extends 'base.html.twig' %}

{% block title %}
{{ room.name}}
{% endblock %}

{% block body %}
<h1>{{ room.name }}</h1>

    <h1 class="text-3xl font-bold text-center mt-8 mb-8 text-blue-900">Détail de la salle</h1>

    <div class="flex justify-center px-4">
        <div class="bg-white rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-200 flex flex-col overflow-hidden max-w-md w-full">
            <img src="{{ asset('medias/images/' ~ room.image) }}" alt="Image de la salle {{ room.name }}" class="h-56 w-full object-cover bg-gray-100 border-b"/>
            <div class="p-5 flex flex-col flex-1">
                <div class="flex items-center justify-between mb-3">
                    <h2 class="text-2xl font-semibold text-blue-800 mb-2">{{ room.name }}</h2>
                    <span>
                        <twig:ux:icon name="line-md:heart" class="h-6 w-6"/>
                    </span>
                </div>
                <p class="text-gray-600 mb-1">
                    <span class="font-bold text-blue-600">Capacité :</span>
                    {{ room.capacity }}
                </p>
                <p class="text-gray-700 mb-2">
                    <span class="font-bold text-blue-600">Description :</span>
                    {{ room.description }}
                </p>
                <div class="mt-auto flex justify-center">
                    <span class="inline-block px-3 py-1 rounded-full text-sm font-semibold
                        {{ room.isAvailable ? 'bg-green-100 text-green-700' : 'bg-red-100 text-red-700' }}">
                        {{ room.isAvailable ? 'Disponible' : 'Indisponible' }}
                    </span>
                </div>
            </div>
        </div>
    </div>

<div class="max-w-xl mx-auto py-10 px-4">
    <h1 class="text-2xl font-bold text-center mb-8">Nouvelle Réservation</h1>
    {{ form_start(form) }}
        <div class="space-y-6 bg-white p-8 rounded-lg shadow">
            <div>
                {{ form_label(form.startDate, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(form.startDate, {'attr': {'class': 'w-full border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.startDate) }}
            </div>
            <div>
                {{ form_label(form.endDate, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(form.endDate, {'attr': {'class': 'w-full border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.endDate) }}
            </div>
            <div>
                {{ form_label(form.equipments, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(form.equipments, {'attr': {'class': 'w-full border-gray-300 rounded px-3 py-2'}}) }}
                {{ form_errors(form.equipments) }}
            </div>
            <div>
                {{ form_label(form.options, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(form.options, {'attr': {'class': 'w-full border-gray-300 rounded px-3 py-2'}}) }}
                {{ form_errors(form.options) }}
            </div>
            <div>
                {{ form_widget(form.submit, {'attr': {'class': 'bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full'}}) }}
            </div>
        </div>
    {{ form_end(form) }}
    <div class="text-center mt-6">
        <a href="{{ path('bookings') }}" class="text-blue-500 hover:underline">Retour à mes réservations</a>
    </div>
</div>

<a href="{{path('rooms')}}">retour</a>


{% endblock %}