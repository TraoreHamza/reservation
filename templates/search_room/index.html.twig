{% extends 'base.html.twig' %}

{% block title %}Recherche de chambres{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
    <h1 class="text-3xl font-bold text-gray-800 mb-8">Recherche avancée de chambres</h1>
    
    <div class="bg-white rounded-lg shadow-md p-6">
        <form method="GET" action="{{ path('search_room') }}" class="space-y-4">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
                <!-- Terme de recherche -->
                <div>
                    <label for="q" class="block text-sm font-medium text-gray-700 mb-2">
                        Terme de recherche
                    </label>
                    <input 
                        type="text" 
                        id="q" 
                        name="q" 
                        value="{{ query }}"
                        placeholder="Nom, description, équipements..."
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                </div>
                
                <!-- Capacité -->
                <div>
                    <label for="capacity" class="block text-sm font-medium text-gray-700 mb-2">
                        Capacité minimum
                    </label>
                    <input 
                        type="number" 
                        id="capacity" 
                        name="capacity" 
                        min="1"
                        placeholder="Nombre de personnes"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                </div>
                
                <!-- Prix maximum -->
                <div>
                    <label for="maxPrice" class="block text-sm font-medium text-gray-700 mb-2">
                        Prix maximum par jour
                    </label>
                    <input 
                        type="number" 
                        id="maxPrice" 
                        name="maxPrice" 
                        min="0"
                        step="0.01"
                        placeholder="Prix en euros"
                        class="w-full px-3 py-2 border border-gray-300 rounded-md focus:outline-none focus:ring-2 focus:ring-blue-500"
                    >
                </div>
            </div>
            
            <!-- Boutons -->
            <div class="flex justify-between items-center pt-4">
                <button 
                    type="submit"
                    class="bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-6 rounded-md transition duration-200"
                >
                    Rechercher
                </button>
                
                <a 
                    href="{{ path('test_search') }}"
                    class="text-blue-600 hover:text-blue-800 font-medium"
                >
                    Voir toutes les chambres
                </a>
            </div>
        </form>
    </div>
    
    <!-- Zone de résultats -->
    <div id="search-results" class="mt-8">
        <!-- Les résultats de recherche seront affichés ici via JavaScript -->
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    const searchInput = document.getElementById('q');
    const resultsContainer = document.getElementById('search-results');
    
    // Recherche en temps réel
    searchInput.addEventListener('input', function() {
        const query = this.value.trim();
        
        if (query.length >= 2) {
            fetch(`/api/search-room?q=${encodeURIComponent(query)}`)
                .then(response => response.json())
                .then(data => {
                    displayResults(data);
                })
                .catch(error => {
                    console.error('Erreur lors de la recherche:', error);
                });
        } else {
            resultsContainer.innerHTML = '';
        }
    });
    
    function displayResults(rooms) {
        if (rooms.length === 0) {
            resultsContainer.innerHTML = '<p class="text-gray-500 text-center py-8">Aucune chambre trouvée.</p>';
            return;
        }
        
        const html = rooms.map(room => `
            <div class="bg-white rounded-lg shadow-md p-6 mb-4">
                <h3 class="text-xl font-semibold text-gray-800 mb-2">${room.name}</h3>
                <p class="text-gray-600 mb-4">${room.description || 'Aucune description disponible'}</p>
                <div class="flex justify-between items-center">
                    <span class="text-sm text-gray-500">Capacité: ${room.capacity} personnes</span>
                    <span class="text-lg font-bold text-blue-600">${room.price} €/jour</span>
                </div>
            </div>
        `).join('');
        
        resultsContainer.innerHTML = html;
    }
});
</script>
{% endblock %} 