{% extends 'base.html.twig' %}

{% block title %}Nouvelle Réservation{% endblock %}

{% block body %}
<div class="max-w-xl mx-auto py-10 px-4">
    <h1 class="text-2xl font-bold text-center mb-8">Nouvelle Réservation</h1>
    
    <!-- Debug: Afficher le nombre d'équipements disponibles -->
    <div class="mb-4 p-4 bg-gray-100 rounded">
        <p><strong>Debug:</strong> {{ form.equipments.vars.choices|length }} équipements disponibles</p>
        <p><strong>Debug:</strong> {{ form.options.vars.choices|length }} options disponibles</p>
    </div>
    
    {{ form_start(form) }}
        <div class="space-y-6 bg-white p-8 rounded-lg shadow">
            <div>
                {{ form_label(form.room, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(form.room, {'attr': {'class': 'w-full border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.room) }}
            </div>
            <div>
                {{ form_label(form.startDate, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(form.startDate, {'attr': {'class': 'w-full border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.startDate) }}
            </div>
            <div>
                {{ form_label(form.endDate, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                {{ form_widget(form.endDate, {'attr': {'class': 'w-full border-gray-300 rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-blue-500'}}) }}
                {{ form_errors(form.endDate) }}
            </div>
            <div>
                {{ form_label(form.equipments, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                <div class="space-y-2 max-h-40 overflow-y-auto border border-gray-300 rounded p-3">
                    {{ form_widget(form.equipments, {'attr': {'class': 'space-y-2'}}) }}
                </div>
                {{ form_errors(form.equipments) }}
            </div>
            <div>
                {{ form_label(form.options, null, {'label_attr': {'class': 'block text-gray-700 font-medium mb-1'}}) }}
                <div class="space-y-2 max-h-40 overflow-y-auto border border-gray-300 rounded p-3">
                    {{ form_widget(form.options, {'attr': {'class': 'space-y-2'}}) }}
                </div>
                {{ form_errors(form.options) }}
            </div>
            <div>
                {{ form_widget(form.submit, {'attr': {'class': 'bg-blue-600 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded w-full'}}) }}
            </div>
        </div>
    {{ form_end(form) }}
    <div class="text-center mt-6">
        <a href="{{ path('bookings') }}" class="text-blue-500 hover:underline">Retour à mes réservations</a>
    </div>
</div>
{% endblock %}